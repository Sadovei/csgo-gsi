{
  "exclude": ["node_modules", "resources"],
  "include": ["src/*.ts", "src/**/*.ts"],
  "compilerOptions": {
    "sourceMap": true,
    "removeComments": true,

    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "esModuleInterop": true,

    "noUnusedLocals": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,

    "outDir": "dist"
  }
}
